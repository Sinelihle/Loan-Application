        <TextBlock x:Name="totalCostBox" HorizontalAlignment="Left" Margin="392,262,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="white" FontSize="15" Height="40" Width="161"/>
        <TextBlock x:Name="notifyBox" HorizontalAlignment="Left" Margin="134,330,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="red" FontSize="15 " Height="39" Width="419"/>
