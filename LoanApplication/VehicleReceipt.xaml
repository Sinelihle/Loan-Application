        <Label Content="Deposit" HorizontalAlignment="Left" Margin="134,184,0,0" VerticalAlignment="Top" Width="135" Foreground="white" FontSize="15" Height="36"/>
        <TextBlock x:Name="interestRateBox" HorizontalAlignment="Left" Margin="392,225,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="white" FontSize="15" Height="40" Width="161"/>
